// 通用，不会因为项目不同而改变
{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build" // == cd build
    },
    "tasks": [
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake",
            "args": [
                ".."
            ]
        },
        {
            "label": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "mingw32-make.exe",
            "args": []
        },
        {
            "label": "Build",
            // "dependOrder": "sequence", // 按列出的顺序执行任务依赖项
            "dependsOn": [
                "cmake",
                "make"
            ]
        }
    ]
}